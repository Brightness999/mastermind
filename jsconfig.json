{
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "paths": {
      "@": [
        "./src/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "routes/*": [
        "./src/routes/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "devtool": "source-map"
}